{
    // SMART Visual Chain-of-Thought Project ======================================= //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train.py",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [ 
                "--run_name", "debugging_console",
                "--output_dir", "./checkpoints/dump/",
                "--num_train_epochs", "3",
                "--per_device_train_batch_size", "1",
                ]
        },
        
        {
            "name": "eval.py",
            "type": "debugpy", 
            "request": "launch",
            "program": "eval.py",
            "console": "integratedTerminal",
            "args": [ 
                "--output_dir", "./checkpoints/dump/",
                // "--num_train_epochs", "1",
                "--per_device_train_batch_size", "2",
                "--per_device_eval_batch_size", "2",
                // "--load_cpkt_path", "checkpoints/dump/checkpoint-16000"
                ]
        },

        {
            "name": "inference.py",
            "type": "debugpy",
            "request": "launch",
            "program": "inference.py",
            "console": "integratedTerminal",
            "args": [ 
                "--num_workers", "8",
                "--batch_size", "1",
                "--data_root", "/data/SMART101-release-v1/SMART101-Data/",
                "--save_root", "./V_COT_output/",
                "--output_name", "dump.json",
                // "--load_ckpt_path", "checkpoints/full_fine_tuning/checkpoint-16000",
                "--VLM_type", "Idefics2",
                "--eval_tot", "3",
                "--test_puzzle_list", "1,2,6,7,17,19,40,77",
                "--gpu_num", "2",
                ]
        },

        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}