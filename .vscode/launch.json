{
    // SMART Visual Chain-of-Thought Project ======================================= //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train.py",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [ 
                "--output_dir", "./checkpoints/dump/",
                "--num_train_epochs", "5",
                "--per_device_train_batch_size", "1",
                ]
        },
        
        {
            "name": "eval.py",
            "type": "debugpy",
            "request": "launch",
            "program": "eval.py",
            "console": "integratedTerminal",
            "args": [ 
                "--output_dir", "./checkpoints/dump/",
                "--num_train_epochs", "5",
                "--per_device_train_batch_size", "3",
                "--per_device_eval_batch_size", "3",
                "--load_cpkt_path", "checkpoints/dump/checkpoint-60"
                ]
        },

        {
            "name": "inference.py",
            "type": "debugpy",
            "request": "launch",
            "program": "V_COT_reasoning_analysis.py",
            "console": "integratedTerminal",
            "args": [ 
                "--num_workers", "8",
                "--batch_size", "1",
                "--data_root", "/data/SMART101-release-v1/SMART101-Data/",
                "--save_root", "./V_COT_output/",
                "--output_name", "zero_shot_train_result.json",
                "--load_ckpt_path", "checkpoints/Zero_Shot_train/checkpoint-2000",
                "--VLM_type", "Idefics2",
                "--eval_tot", "3",
                "--test_puzzle_list", "1,2,6,7,17,19,40,77",
                "--gpu_num", "0",
                ]
        },

        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}